
# Use the -device option to target a specific keyboard
#   View keyboards using `xinput -list | grep -i key`
#
#   To reset to default, use `setxkbmap -option`
setxkbmap -option "ctrl:nocaps"
setxkbmap -option altwin:swap_alt_win
setxkbmap -layout au

# setxkbmap -option -device 15
# setxkbmap -option "ctrl:nocaps" -device 15
# setxkbmap -layout au -device 15

export TERMINAL=termite
export WM_SCRIPTS_DIR=$HOME/.config/i3blocks
